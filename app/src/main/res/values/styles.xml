<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Vertical_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="point_display_style">
        <item name="android:layout_marginTop">@dimen/time_controls_button_margin_adjustment</item>
        <item name="android:layout_marginBottom">@dimen/time_controls_button_margin_adjustment
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/point_display_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/point_display_padding</item>
    </style>

    <style name="advantage_display_style">
        <item name="android:textSize">@dimen/advantage_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="points_button_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/points_button_margin_sides</item>
        <item name="android:layout_marginRight">@dimen/points_button_margin_sides</item>
        <item name="android:layout_marginTop">@dimen/points_button_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/points_button_margin_top_bottom</item>
        <item name="android:textColor">@color/points_button_text_color</item>
        <item name="android:textSize">@dimen/controls_button_text_size</item>
    </style>

    <style name="history_view_style">
        <item name="android:textColor">@color/history_view_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/history_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="timer_digits_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">2</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/timer_digits_color</item>
        <item name="android:textSize">@dimen/timer_digits_size</item>
        <item name="android:layout_marginTop">@dimen/time_controls_button_margin_adjustment</item>
        <item name="android:layout_marginBottom">@dimen/time_controls_button_margin_adjustment
        </item>
    </style>

    <style name="time_amount_control_buttons_stye">
        <item name="android:layout_height">@dimen/time_controls_button_height</item>
        <item name="android:layout_width">@dimen/time_controls_button_width</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/main_screenbackground</item>
        <item name="android:padding">@dimen/time_controls_button_padding</item>
        <item name="android:layout_margin">@dimen/time_controls_button_margin</item>>
    </style>

    <style name="frame_timer_control_buttons_stye">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/control_button_background</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_sides</item>
        <item name="android:layout_marginRight">@dimen/button_margin_sides</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_top_bottom</item>
    </style>

    <style name="control_buttons_stye">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textColor">@color/control_button_text_background</item>
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:layout_height">@dimen/all_control_button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/controls_button_text_size</item>
    </style>

    <style name="controls_heading_style">
        <item name="android:background">@color/main_screenbackground</item>
        <item name="android:textColor">@color/timer_digits_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/controls_heading_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_title_style">
        <item name="android:background">@color/main_screenbackground</item>
        <item name="android:textColor">@color/timer_digits_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_title_name_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="app_title_style_landscape">
        <item name="android:background">@color/main_screenbackground</item>
        <item name="android:textColor">@color/timer_digits_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_title_name_size_landscape</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
